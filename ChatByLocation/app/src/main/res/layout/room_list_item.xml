<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/roomItem">

        <TextView
            android:id="@+id/roomName"
            android:text="Default Chatroom"
            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/roomCoords"
            android:text="43° 03′ 8″ N, 87° 57′ 21″ W"
            android:textSize="12sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"

            app:layout_constraintTop_toBottomOf="@id/roomName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/roomRadius"
            android:text="Radius: 20 m"
            android:textSize="12sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            app:layout_constraintTop_toBottomOf="@id/roomCoords"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/joinButton"
            android:text="@string/enter"
            android:onClick="joinRoomClick"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/roomIsPrivate"
            android:visibility="visible"
            android:src="@drawable/ic_lock_24dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            app:layout_constraintEnd_toStartOf="@id/joinButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/customDivider"
        android:background="@color/listDivider"

        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/roomItem">
    </RelativeLayout>

</RelativeLayout>