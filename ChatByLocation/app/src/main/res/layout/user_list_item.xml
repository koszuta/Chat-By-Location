<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_in_user_list"

        android:layout_width="61dp"
        android:layout_height="51dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:background="@color/colorAccent"

        android:padding="2dp"

        android:src="@drawable/ic_koala"
        android:layout_marginLeft="-4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/user_name_in_list"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@+id/icon_in_user_list"
        app:layout_constraintRight_toLeftOf="@+id/mute_button_user"
        tools:text="User Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ToggleButton
        android:id="@+id/mute_button_user"
        style="@style/colorThemeButton"
        android:layout_width="87dp"
        android:layout_height="53dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:onClick="onMuteClick"
        android:textOff="@string/mute"
        android:textOn="@string/unmute"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>