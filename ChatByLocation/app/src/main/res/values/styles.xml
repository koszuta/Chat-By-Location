<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFEB3B</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff0000</item>
        <item name="android:colorBackground">#FFFFEB3B</item>
        <item name="android:buttonStyle">@style/colorThemeButton</item>
        <item name="android:textColor">@color/tw__composer_black</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="colorThemeButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

</resources>
