<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FirebaseUI.WrapperStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_back_idp_header"
        style="@style/FirebaseUI.Text.Heading"/>

    <TextView
        android:id="@+id/welcome_back_idp_prompt"
        style="@style/FirebaseUI.Text.BodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sign in with Google to start chatting!" />

    <Button
        android:id="@+id/welcome_back_idp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/sign_in_default"/>

</LinearLayout>
